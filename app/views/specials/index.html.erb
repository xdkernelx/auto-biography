<% if @report_type == "Issue" %>
	<h1>
    New Repair Report
  </h1>
  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
    	<li>
        <%= error %>
      </li>
    	<% end %>
    </ul>
  <% end %>

  <%= form_for @service, url: specials_path do |f| %>
    <p>
      <%= f.label :title%>:
      <%= f.text_field :title %>
      <br />
    </p>
    <p>
      <%= f.label :mileage%>
      <%= f.text_field :mileage %>
    </p>
    <p>
    <p>
      <%= f.label :date_completed %>
      <%= f.date_field :date_completed %>
    </p>
    <p>
      <%= f.label :description%>:
      <%= f.text_area :description %>
      <br />
    </p>

    <%= f.hidden_field :car_id, :value => @car_id %>
    <%= f.hidden_field :issue_id, :value => @issue_id %>
    <%= f.hidden_field :report_type, :value => @report_type %>
    <%= f.submit %>
  <% end %>
<% elsif @report_type = "Maintenance" %>
  <h1>
    Create new maintenance
  </h1>

  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li>
          <%= error %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @service, url: specials_path do |f| %>
    <p>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :mileage %>
      <%= f.number_field :mileage %>
    </p>

    <p>
      <%= f.label :date_completed %>
      <%= f.date_field :date_completed %>
    </p>

    <%= f.hidden_field :car_id, :value => @car_id %>
    <%= f.hidden_field :report_type, :value => @report_type %>
    <p>
      <%= f.submit "Create report", class: 'btn btn-primary'%>
    </p>
  <% end %>
<% end %>

