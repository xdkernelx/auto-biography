<h1>My Garage</h1><br>
	<div>
		<%= link_to 'Add Car', new_car_path, class: "btn btn-primary" %>
	</div>

<% if user_signed_in? %>
	<% @cars.each do |car| %>
	<div class="col-md-4">
	<div class="card">
		 <%= link_to image_tag(car.image.url(:medium)), car_path(car) %>
	  <div class="card-block">
	    <h4 class="card-title"><%= car.year%> <%=car.make%> <%=car.model%></h4>
	    <p class="card-text"><%=link_to "View Details", car_path(car)%></p>
	  </div>
	</div>
	</div>
	<% end %>
<% else %>
	<%= @errors %>
<% end %>
